@using ASP6.Models
@{
    ViewData["Title"] = "Home";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/index.css" />
    </head>
<body>
<div class="text-center">
    <h1 class="display-4">Order right now!</h1>
    <form method="post">
        <div>
            <label>Name</label>
        </div>
        <div>
            <input type="text" name="name" style="border-radius:10px; border-width:.5px; text-align:center" />
        </div>
        <div>
            <label>Age</label>
        </div>
        <div>
            <input type="number" name="age" min="0" style="border-radius:10px; border-width:.5px; width:50px" />
        </div>
        <div>
            Choose which pizzas you want to order
        </div>
        <div>
                <span class="name-offset">Pepperoni</span>
                <span>Hawaiian</span>
        </div>
        <div>
                @Html.CheckBox("pepperoni")
                <span class="checkbox-offset"></span>
                @Html.CheckBox("hawaiian")
        </div>
        <div>
                <span class="second-name-offset">Chicken BBQ</span>
                <span>Margherita</span>
        </div>
        <div>
                @Html.CheckBox("chickenbbq")
                <span class="checkbox-offset"></span>
                @Html.CheckBox("margherita")
        </div>
        <div>
            <input type="submit" value="Continue" style="border-radius:10px; boredr-width:.5px" />
        </div>
    </form>
</div>
</body>
</html>
